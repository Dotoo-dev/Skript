command /testdayo:
	trigger:
		loop all players:
			loop all items of loop-player:
				if name of loop-item contains "Magical Coin Pouch":
					set {_switch%loop-player%} to 1
					broadcast "財布もってるひと: %loop-player%"
			if {_switch%loop-player%} is 1:
				send "財布もってるだろきみ" to loop-player