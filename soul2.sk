command /sactive <number>:
	trigger:
		if arg-1 is 1:
			set {unlocked_soul_knight%player%} to 1
			set {soul_active_knight%player%} to 1
		else:
			set {unlocked_soul_knight%player%} to 0
			set {soul_active_knight%player%} to 0
			
