command /wallet <player> <text> <number>:
	executable by: console
	trigger:
		set {_coins} to arg-3
		loop all items of player-arg:
			if name of loop-item contains "Magical Coin Pouch":
				# broadcast "debug: has pouch"
				if arg-2 is "cre":
				
					set {_temp} to uncolored line 1 of lore of loop-item
					replace all "⛃" in {_temp} with ""
					replace all " " in {_temp} with ""
					set {_temp2} to {_temp} parsed as number
					
					
					add {_coins} to {_temp2}
					if {_temp2} is more than 10000:
						set {_coins} to {_temp2}-10000
						set {_temp2} to 10000
						set line 1 of lore of loop-item to "&a⛃&f %{_temp2}%"
					else:
						set line 1 of lore of loop-item to "&a⛃&f %{_temp2}%"
						stop
						
				if arg-2 is "moo":
				
					set {_temp} to uncolored line 2 of lore of loop-item
					replace all "⛃" in {_temp} with ""
					replace all " " in {_temp} with ""
					set {_temp2} to {_temp} parsed as number
					
					
					add {_coins} to {_temp2}
					if {_temp2} is more than 10000:
						set {_coins} to {_temp2}-10000
						set {_temp2} to 10000
						set line 2 of lore of loop-item to "&c⛃&f %{_temp2}%"
					else:
						set line 2 of lore of loop-item to "&c⛃&f %{_temp2}%"
						stop
				
